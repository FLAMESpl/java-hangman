<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AccountsServlet</servlet-name>
        <servlet-class>pl.wikihangman.web.servlets.AccountsServlet</servlet-class>
        <init-param>
            <param-name>dbPath</param-name>
            <param-value>jdbc:derby://localhost:1527/hangman</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ScoreboardServlet</servlet-name>
        <servlet-class>pl.wikihangman.web.servlets.ScoreboardServlet</servlet-class>
        <init-param>
            <param-name>dbPath</param-name>
            <param-value>jdbc:derby://localhost:1527/hangman</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>HangmanServlet</servlet-name>
        <servlet-class>pl.wikihangman.web.servlets.HangmanServlet</servlet-class>
        <init-param>
            <param-name>dbPath</param-name>
            <param-value>jdbc:derby://localhost:1527/hangman</param-value>
        </init-param>
        <init-param>
            <param-name>wikiHost</param-name>
            <param-value>pl.wikipedia.org</param-value>
        </init-param>
        <init-param>
            <param-name>maxLength</param-name>
            <param-value>15</param-value>
        </init-param>
        <init-param>
            <param-name>maxRetries</param-name>
            <param-value>5</param-value>
        </init-param>
        <init-param>
            <param-name>timeout</param-name>
            <param-value>1000</param-value>
        </init-param>
        <init-param>
            <param-name>querySize</param-name>
            <param-value>10</param-value>
        </init-param>
    </servlet>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
